@{
    ViewBag.Title = "Mis Eventos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@System.Web.Optimization.Scripts.Render("/ViewScripts/Event/MyEvents.js")
@System.Web.Optimization.Scripts.Render("/Scripts/jquery.blockUI.js")
@System.Web.Optimization.Scripts.Render("/Scripts/bootbox.min.js")

<div class="row-fluid">
    <div class="col-md-10 offset1">
        <div style="margin-bottom: 25px" id="create">
            <div class="row-fluid">
                <div class="col-md-12">
                    <h2 class="subtitle">Mis Eventos</h2>
                    <div class="row-fluid" style="padding-bottom: -5px">
                        <div class="col-md-12">
                            <ul class="subtitle-sections">
                                <li><a href="/Event/MyEvents?currentEvents=true" title="Eventos a realizarse proximamente" class="label-lobster eventsSearch">Futuros</a></li>
                                <li><a href="/Event/MyEvents?currentEvents=false" title="Eventos que ya se llevaron a cabo" class="label-lobster eventsSearch">Pasados</a></li>
                                <li>
                                    <a id="filter" href="#" title="Filtros" class="label-lobster">Filtros <span class="caret"></span></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div id="filterRegion" class="row-fluid" style="display: none">
                        <div class="col-md-12">
                            <span class="glyphicon glyphicon-chevron-up" style="margin-left: 136px; color: #B89C83"></span>
                            @Html.Partial("Partial/_EventsFilter")
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="col-md-12">
                            @if (ViewBag.currentEvents)
                            {
                                <h2 class="subtitle">Próximos Eventos</h2>
                            }
                            else
                            {
                                <h2 class="subtitle">Eventos Anteriores</h2>
                            }
                        </div>
                    </div>
                    <div class="col-md-12" style="margin-top: 20px;">
                        @foreach (var Event in (List<PubliEventos.Contract.Class.Event>)ViewBag.myEvents)
                        {
                            <div class="col-md-6" style="margin-bottom: 1%; height: 280px;">
                                <div class="col-md-12 mosaic">
                                    <div class="row-fluid subtitle">
                                        <div class="span12">
                                            <div class="span4">
                                                <div class="tl-circ" style="padding-top: 10px; padding-bottom: 10px;">
                                                    <img src="/Content/images/Covers/@Event.FileName" style="width: 120px; height: 120px;" alt="" class="img-circle" data-src="holder.js/120x120/auto">
                                                </div>
                                            </div>
                                            <nav class="verticaltabs-container">
                                                <ul>
                                                    <li style="padding-bottom: 5px" class="vertical-list-item"><a class="deleteEvent" title="Eliminar Evento" rel="@Event.Id" href="#"><i style="color: #B89C83" class="glyphicon glyphicon-remove"></i></a></li>
                                                    <li style="padding-bottom: 5px" class="vertical-list-item"><a title="Editar Evento" href="/Event/Edit/@Event.Id"><i style="color: #B89C83" class="glyphicon glyphicon-pencil"></i></a></li>
                                                    <li class="vertical-list-item"><a title="Ver Detalle" href="/Event/Detail/@Event.Id"><i style="color: #B89C83" class="glyphicon glyphicon-search"></i></a></li>
                                                </ul>
                                            </nav>
                                            <div class="span8">
                                                <h4 class="font-text" style="color: #c25b4e">@Event.Title</h4>
                                                <p>
                                                    <p class="font-text" style="display: inline;">Fecha:</p>
                                                    <strong class="font-text" style="display: inline">@Event.EventDate.ToShortDateString()</strong>
                                                </p>
                                                <p>
                                                    <p class="font-text" style="display: inline;">Hora:</p>
                                                    <strong class="font-text" style="display: inline;">@Event.EventStartTime.ToString(@"hh\:mm") a @Event.EventEndTime.ToString(@"hh\:mm") Hs</strong>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="span12">
                                                <p class="font-text">@Event.Description</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
