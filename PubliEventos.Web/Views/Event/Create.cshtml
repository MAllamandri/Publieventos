@model PubliEventos.Contract.Services.EventCreateRequest

@{
    ViewBag.Title = "Crear evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@*@Scripts.Render("~/ViewScripts/Event/Create.js")*@
@Scripts.Render("~/Scripts/moment.js")
@Scripts.Render("~/Scripts/moment-with-locales.js")
@Scripts.Render("~/Scripts/bootstrap-datetimepicker.js")
@Styles.Render("~/Content/bootstrap-datetimepicker.min.css")
                                             
@Styles.Render("~/Content/bootstrap/css/bootstrap-theme.min.css")
@Styles.Render("~/Content/bootstrap/css/bootstrap.min.css")

<div class="row-fluid">
    <div class="col-md-10 offset1">
        <div class="well-form" id="create">
            <div class="row-fluid">
                <div class="col-md-12">
                    <h2 class="subtitle">Alta Evento</h2>
                </div>
            </div>
            <div class="row-fluid">
                <div class="col-md-12">
                    <div class="col-md-8">
                        @Html.Label("Título")
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                    </div>
                    <div class="col-md-4">
                        @Html.Label("Fecha de Realización")
                        <div class="input-group date">
                            @Html.TextBoxFor(m => m.EventDate, new { @class = "form-control date" })
                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/ViewScripts/Event/Create.js" type="text/javascript"></script>