@model PubliEventos.Contract.Services.Event.EventCreateOrUpdateRequest

<div class="row-fluid margin-bottom-normal">
    <div class="col-md-12">
        <div class="col-md-12">
            @Html.Label("Título", new { @class = "label-lobster" })
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Title)
        </div>
    </div>
</div>
<div class="row-fluid margin-bottom-normal">
    <div class="col-md-12">
        <div class="col-md-12">
            @Html.Label("Descripción", new { @class = "label-lobster" })
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "2" })
        </div>
    </div>
</div>
<div class="row-fluid margin-bottom-normal">
    <div class="col-md-12">
        <div class="col-md-12">
            @Html.Label("Detalle", new { @class = "label-lobster" })
            @Html.TextAreaFor(m => m.Detail, new { @class = "form-control", rows = "4" })
        </div>
    </div>
</div>
<div class="row-fluid margin-bottom-normal">
    <div class="col-md-12">
        <div class="col-md-2">
            @Html.Label("Privacidad", new { @class = "label-lobster" })
            <div>
                <div>
                    @Html.Label("Público", new { @class = "label-lobster", style = "padding-right: 10px" })
                    <input type="radio" id="Public" name="Private" value="false" style="margin-right: 15px" checked="checked" />
                </div>
                <div>
                    @Html.Label("Privado", new { @class = "label-lobster", style = "padding-right: 10px" })
                    <input type="radio" id="Private" name="Private" value="true" />
                </div>
            </div>
        </div>
        <div class="col-md-4">
            @Html.Label("Fecha de Realización", new { @class = "label-lobster" })
            <div class="input-group">
                @Html.TextBoxFor(m => m.EventDate, new { @class = "date form-control" })
                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
            </div>
            @Html.ValidationMessageFor(m => m.EventDate)
        </div>
        <div class="col-md-3">
            @Html.Label("Hora de Inicio", new { @class = "label-lobster" })
            <div class="input-group">
                @Html.TextBoxFor(m => m.EventStartTime, new { @class = "time form-control" })
                <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
            </div>
            @Html.ValidationMessageFor(m => m.EventStartTime)
        </div>
        <div class="col-md-3">
            @Html.Label("Hora de Fin", new { @class = "label-lobster" })
            <div class="input-group">
                @Html.TextBoxFor(m => m.EventEndTime, new { @class = "time form-control" })
                <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
            </div>
            @Html.ValidationMessageFor(m => m.EventEndTime)
        </div>
    </div>
</div>
