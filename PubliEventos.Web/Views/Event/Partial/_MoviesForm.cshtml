@model List<string>


@if (Model.Any())
{
    var active = "active";

    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            @foreach (var fileName in Model)
            {

                <div class="item @active">
                    <div class="col-md-6 offset2">
                        <video width="800" height="500" poster="">
                            <source src="/Content/images/EventsPictures/@fileName" type="video/mp4">
                            <source src="/Content/images/EventsPictures/@fileName" type="video/webm">
                            <source src="/Content/images/EventsPictures/@fileName" type="video/mpeg">
                            <source src="/Content/images/EventsPictures/@fileName" type="video/avi">
                            Su navegador no soporta este contenido.
                        </video>
                    </div>
                </div>
                active = "";
            }
        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

}
else
{
    <div class="row-fluid">
        <div class="col-md-6 offset3">
            <p style="font-size: 20px; margin-top: 30px;" class="not-found-message">No Hay Videos Disponibles</p>
        </div>
    </div>   
    
}