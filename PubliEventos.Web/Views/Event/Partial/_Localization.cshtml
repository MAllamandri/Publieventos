<style>
    #map-canvas {
        height: 100%;
        width: 100%;
        margin: 0px;
        padding: 0px;
    }

    .controls {
        margin-top: 16px;
        border: 1px solid transparent;
        border-radius: 2px 0 0 2px;
        box-sizing: border-box;
        -moz-box-sizing: border-box;
        height: 32px;
        outline: none;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
    }

    #pac-input {
        background-color: #fff;
        padding: 0 11px 0 13px;
        width: 400px;
        font-family: Roboto;
        font-size: 15px;
        font-weight: 300;
        text-overflow: ellipsis;
    }

        #pac-input:focus {
            border-color: #4d90fe;
            margin-left: -1px;
            padding-left: 14px; /* Regular padding-left + 1. */
            width: 401px;
        }

    .pac-container {
        font-family: Roboto;
    }

    #type-selector {
        color: #fff;
        background-color: #4d90fe;
        padding: 5px 11px 0px 11px;
    }

        #type-selector label {
            font-family: Roboto;
            font-size: 13px;
            font-weight: 300;
        }

    }
</style>
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places"></script>
<script type="text/javascript">
    $(function () {
        google.maps.event.addDomListener(window, 'load', initialize);

        function initialize() {
            var pos = new google.maps.LatLng(-34.921091, -57.954029);

            var mapOptions = {
                center: pos,
                zoom: 13
            };

            var map = new google.maps.Map(document.getElementById('map-canvas'),
              mapOptions);

            var input = (document.getElementById('pac-input'));
            map.controls[google.maps.ControlPosition.TOP_LEFT].push(input);

            var options = {
                componentRestrictions: { country: 'AR' }//Argentina solamente.
            };

            var autocomplete = new google.maps.places.Autocomplete(input, options);
            autocomplete.bindTo('bounds', map);

            var infowindow = new google.maps.InfoWindow();
            var marker = new google.maps.Marker({
                map: map,
                anchorPoint: new google.maps.Point(0, -29)
            });

            setPosition();

            google.maps.event.addListener(autocomplete, 'place_changed', function () {
                debugger;
                infowindow.close();
                marker.setVisible(false);
                var place = autocomplete.getPlace();
                if (!place.geometry) {
                    return;
                }

                // If the place has a geometry, then present it on a map.
                if (place.geometry.viewport) {
                    map.fitBounds(place.geometry.viewport);
                } else {
                    map.setCenter(place.geometry.location);
                    map.setZoom(17);  // Why 17? Because it looks good.
                }
                marker.setIcon(({
                    url: place.icon,
                    size: new google.maps.Size(71, 71),
                    origin: new google.maps.Point(0, 0),
                    anchor: new google.maps.Point(17, 34),
                    scaledSize: new google.maps.Size(35, 35)
                }));

                marker.setPosition(place.geometry.location);

                // Seteo los hidden para guardar la posición.
                if (place.geometry.location.B != undefined && place.geometry.location.k != undefined) {
                    $('#Latitude').val(place.geometry.location.k.toString());
                    $('#Longitude').val(place.geometry.location.B.toString());
                } else {
                    $('#Latitude').val("");
                    $('#Longitude').val("");
                }

                marker.setVisible(true);

                var address = '';
                if (place.address_components) {
                    address = [
                      (place.address_components[0] && place.address_components[0].short_name || ''),
                      (place.address_components[1] && place.address_components[1].short_name || ''),
                      (place.address_components[2] && place.address_components[2].short_name || '')
                    ].join(' ');
                }

                infowindow.setContent('<div><strong>' + place.name + '</strong><br>');
                infowindow.open(map, marker);
            });

            function setPosition() {
                if ($('#Latitude').val() != "" && $('#Longitude').val() != "") {
                    debugger;
                    geocoder = new google.maps.Geocoder();
                    var latitude = parseFloat($('#Latitude').val().replace(',', '.'));
                    var longitude = parseFloat($('#Longitude').val().replace(',', '.'));
                    cnt = new google.maps.LatLng(latitude, longitude);

                    var infowindow = new google.maps.InfoWindow();
                    var mapOptions = {
                        zoom: 13,
                        center: cnt
                    }

                    var input = (document.getElementById('pac-input'));
                    var map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions);

                    var options = {
                        componentRestrictions: { country: 'AR' }//Argentina solamente.
                    };

                    var autocomplete = new google.maps.places.Autocomplete(input, options);
                    autocomplete.bindTo('bounds', map);
                    
                    infowindow.close();
                   
                    map.controls[google.maps.ControlPosition.TOP_LEFT].push(input);

                    geocoder.geocode({ 'latLng': cnt }, function (results, status) {
                        if (status == google.maps.GeocoderStatus.OK) {
                            map.setCenter(results[0].geometry.location);

                            var marker = new google.maps.Marker({
                                map: map,
                                position: results[0].geometry.location
                            });

                            var address = '';
                            if (results.address_components) {
                                address = [
                                  (results.address_components[0] && results.address_components[0].short_name || ''),
                                  (results.address_components[1] && results.address_components[1].short_name || ''),
                                  (results.address_components[2] && results.address_components[2].short_name || '')
                                ].join(' ');
                            }

                            infowindow.setContent('<div><strong>' + results[0].formatted_address + '</strong><br>');
                            infowindow.open(map, marker);
                        } else {
                            alert("Geocode was not successful for the following reason: " + status);
                        }
                    });

                    // Place a draggable marker on the map
                    //var marker = new google.maps.Marker({
                    //    position: cnt,
                    //    map: map,
                    //    title: "",
                    //    anchorPoint: new google.maps.Point(0, -29)
                    //});

                    // To add the marker to the map, call setMap();
                    //marker.setMap(map);
                }
            }
        }
    });
</script>
<input id="pac-input" class="controls" type="text" placeholder="Ingrese la dirección" />
<div id="map-canvas" style="height: 400px; width: 100%;"></div>
