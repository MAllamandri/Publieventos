@model List<string>

@if (Model.Any())
{
    var active = "active";
    
    <div class="col-md-12" style="margin-top: 20px; margin-bottom: 30px;">
        <div id="carousel-pictures" class="carousel slide" data-ride="carousel" data-interval="false">
            <div class="carousel-inner" role="listbox">
                @foreach (var fileName in Model)
                {

                    <div class="item @active">
                        <nav class="actions-contents">
                            <ul>
                                @if (ViewData["UserId"] != null && (int)ViewData["UserId"] == (User as PubliEventos.Web.App_Start.CustomPrincipal).Id)
                                {
                                    <li><a class="deleteContent" title="Eliminar" rel="@fileName" href="#"><i style="margin-bottom: -14px" class="icon-contents icon-remove"></i></a></li>
                                }
                                <li><a title="Reportar" href="#"><i class="icon-contents icon-ban-circle"></i></a></li>
                            </ul>
                        </nav>
                        <img class="pictures" src="/Content/images/EventsPictures/@fileName" alt="">
                    </div>
                                active = "";
                }
            </div>
            <!-- Controls -->
            <a class="carousel-control" href="#carousel-pictures" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" style="color: #B89C83" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" style="background-image: none" href="#carousel-pictures" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" style="color: #B89C83" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
}
else
{
    <div class="row-fluid">
        <div class="col-md-6 offset3">
            <p style="font-size: 20px; margin-top: 30px;" class="not-found-message">No Hay Fotos Disponibles</p>
        </div>
    </div>
}

<div id="regionNotFound" class="row-fluid" style="display: none">
    <div class="col-md-6 offset3">
        <p style="font-size: 20px; margin-top: 30px;" class="not-found-message">No Hay Fotos Disponibles</p>
    </div>
</div>
