<div data-bind="visible: MyPictures().length > 0" class="col-md-12" style="margin-top: 20px; margin-bottom: 30px;">
    <div id="carousel-pictures" class="carousel slide" data-ride="carousel" data-interval="false">
        <div class="carousel-inner" data-bind="foreach: MyPictures" role="listbox">
            <div data-bind="attr: { 'class': Active() }" class="item">
                <div data-bind="visible: IsReported()" class="reportMessage" style="position: absolute; color: #f00;">
                    <strong style="font-size: 11px !important">Has Reportado esta foto</strong>
                </div>
                <nav class="actions-contents">
                    <ul>
                        @if (ViewData["UserId"] != null && (int)ViewData["UserId"] == (User as PubliEventos.Web.App_Start.CustomPrincipal).Id)
                        {
                            <li><a data-bind="click: RemoveContent" title="Eliminar" href="#"><i style="margin-bottom: -14px" class="icon-contents icon-remove"></i></a></li>
                        }
                        <li data-bind="visible: !IsReported(), click: ShowReportModal"><a title="Reportar" href="#"><i class="icon-contents icon-ban-circle"></i></a></li>
                    </ul>
                </nav>
                <img class="pictures" style="max-height: 500px !important; max-width: 850px !important;" data-bind="attr: { src: Path }" alt="">
            </div>
        </div>
        <!-- Controls -->
        <a class="carousel-control" data-bind="visible: MyPictures().length > 0" style="width: 20px !important" href="#carousel-pictures" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" style="color: #777" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" data-bind="visible: MyPictures().length > 0" style="background-image: none; width: 20px !important;" href="#carousel-pictures" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" style="color: #777" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div data-bind="visible: MyPictures().length == 0" class="row">
    <div class="col-md-12" style="text-align: center">
        <p style="font-size: 20px; margin-top: 30px;" class="not-found-message not-found-message-dark">NO HAY FOTOS DISPONIBLES</p>
    </div>
</div>
