@model List<PubliEventos.Contract.Class.Event>

@foreach (var Event in Model)
{
    <div class="col-md-6" style="margin-bottom: 1%; height: 280px;">
        <div class="col-md-12 mosaic">
            <div class="row-fluid subtitle">
                <div class="span12">
                    <div class="span4">
                        <div class="tl-circ" style="padding-top: 10px; padding-bottom: 10px;">
                            <img src="/Content/images/Covers/@Event.FileName" style="width: 120px; height: 120px;" alt="" class="img-circle" data-src="holder.js/120x120/auto">
                        </div>
                    </div>
                    <div class="span7">
                        <h4 class="font-text" style="color: #c25b4e">@Event.Title</h4>
                        <p>
                            <p class="font-text" style="display: inline;">Fecha:</p>
                            <strong class="font-text" style="display: inline">@Event.EventDate.ToShortDateString()</strong>
                        </p>
                        <p>
                            <p class="font-text" style="display: inline;">Hora:</p>
                            <strong class="font-text" style="display: inline;">@Event.EventStartTime.ToString(@"hh\:mm") a @Event.EventEndTime.ToString(@"hh\:mm") Hs</strong>
                        </p>
                    </div>
                    <div id="#nav-action" class="span1">
                        <nav class="verticaltabs-container">
                            <ul>
                                <li class="vertical-list-item"><a style="padding-bottom: 7px" class="deleteEvent" title="Eliminar Evento" rel="@Event.Id" href="#"><i class="icon-default glyphicon glyphicon-remove"></i></a></li>
                                <li style="padding-bottom: 7px" class="vertical-list-item"><a title="Editar Evento" href="/Event/Edit/@Event.Id"><i class="icon-default glyphicon glyphicon-pencil"></i></a></li>
                                <li class="vertical-list-item"><a title="Ver Detalle" href="/Event/Detail/@Event.Id"><i class="icon-default glyphicon glyphicon-search"></i></a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="span12">
                        <p class="font-text">@Event.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}