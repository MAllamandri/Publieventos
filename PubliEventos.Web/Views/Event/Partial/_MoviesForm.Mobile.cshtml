<div data-bind="visible: MyMovies().length > 0" class="col-md-12" style="margin-top: 20px; margin-bottom: 30px;">
    <div id="carousel-movies" class="carousel slide" data-ride="carousel" data-interval="false">
        <div class="carousel-inner" data-bind="foreach: MyMovies" role="listbox">
            <div data-bind="attr: { 'class': Active() }" class="item">
                <div data-bind="visible: IsReported()" style="position: absolute; color: #f00">
                    <strong style="font-size: 11px !important">Has Reportado este video</strong>
                </div>
                <video class="movies" style="width: 100%" controls poster="">
                    <source data-bind="attr: { src: Path }" type="video/mp4">
                    <source data-bind="attr: { src: Path }" type="video/webm">
                    Su navegador no soporta este contenido.
                </video>
            </div>
        </div>
        <!-- Controls -->
        <a class="carousel-control" data-bind="visible: MyMovies().length > 0" style="width: 20px !important" href="#carousel-movies" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" style="color: #B89C83" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" data-bind="visible: MyMovies().length > 0" style="background-image: none; width: 20px !important;" href="#carousel-movies" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" style="color: #B89C83" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div id="regionNotFoundMovies" data-bind="visible: MyMovies().length == 0" class="row">
    <div class="col-xs-12" style="text-align: center">
        <p style="font-size: 20px; margin-top: 30px;" class="not-found-message">No Hay Videos Disponibles</p>
    </div>
</div>
