        <div class="affix" style="display: inline; z-index: 1;">
            <a class="title" href="../Home/Index">publieventos</a>
        </div>
        <div class="col-xs-6" style="float: right">
            <div class="container.fluid">
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <img src="/Content/images/maxi.png" alt="" class="image-profile img-circle right" data-src="holder.js/50x50">
                    <a title="Editar Perfil" href="#"><span class="username">MAllamandri</span></a>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid col-xs-12 container-total-index">
        <div>
            @RenderBody()
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>

