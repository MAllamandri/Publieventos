@{
    ViewBag.Title = "Mis Invitaciones";
    Layout = "~/Views/Shared/_LayoutPublieventos.cshtml";
}

@System.Web.Optimization.Scripts.Render("/Scripts/bootbox.min.js")
@System.Web.Optimization.Scripts.Render("/ViewScripts/Invitation/MyInvitations.js")

@using PubliEventos.Contract.Class;
@using System.Linq;

<div class="row">
    <h2 class="title-section">MIS INVITACIONES</h2>
    <div class="col-md-12">
        <div style="margin-bottom: 25px" id="create">
            <div class="row">
                <div class="col-md-12">
                    @if (((List<Invitation>)ViewBag.invitations).Count == 0)
                    {
                        <div class="row" style="margin-top: 20px">
                            <div class="col-md-12" style="text-align: center">
                                <p style="margin-top: 30px;" class="not-found-message margin-top-normal not-found-message-dark">NO TIENE INVITACIONES PENDIENTES</p>
                            </div>
                        </div>
                    }

                    @foreach (var invitation in (List<Invitation>)ViewBag.invitations)
                    {
                        var userAdministrator = invitation.Event != null ? invitation.Event.User : invitation.Group.Administrator;
                            
                        <div class="col-md-4 mosaic-invitation" style="margin-bottom: 40px; margin-top: 40px; height: 270px;">
                            <div class="col-md-12 mosaic" style="min-height: 170px">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-12" style="margin-top: 30px">
                                            <div class="col-md-3">
                                                <img src="@userAdministrator.PathProfile"  data-toggle="tooltip" data-placement="top" title="@userAdministrator.UserName" alt="Perfil del usuario" class="profile-invitation img-responsive img-rounded right" data-src="holder.js/70x70">
                                            </div>
                                            <div class="col-md-9" style="text-align: center">
                                                <strong class="invitation-user">@userAdministrator.FullName</strong>
                                            </div>
                                        </div>
                                        <div class="col-md-12" style="margin-top: 30px">
                                            @if (invitation.Group != null)
                                            {
                                                <div style="text-align: center">Te ha invitado a participar de su grupo:</div>
                                                <br />
                                                <div style="text-align: center; margin-bottom: 15px;">
                                                    <strong class="invitation-title-group">@invitation.Group.Name</strong>
                                                </div>
                                            }

                                            @if (invitation.Event != null)
                                            {
                                                <div style="text-align: center">Te ha invitado a participar de su evento:</div>
                                                <br />
                                                <div style="text-align: center; margin-bottom: 15px;">
                                                    <a href="/Event/Detail/@invitation.Event.Id"><strong style="display: inline" class="invitation-title">@invitation.Event.Title</strong></a>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-md-12 invitation-actions" style="margin-bottom: 15px">
                                            <button type="button"  data-toggle="tooltip" data-placement="top" title="Cancelar Invitación" class="replyInvitation cancel invitation-button invitation-cancel" rel="@invitation.Id">NO ASISTIRÉ</button>
                                            <button type="button"  data-toggle="tooltip" data-placement="top" title="Aceptar Invitación" class="replyInvitation confirm invitation-button invitation-confirm" rel="@invitation.Id" style="margin-right: 10px;">ASISTIRÉ</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

