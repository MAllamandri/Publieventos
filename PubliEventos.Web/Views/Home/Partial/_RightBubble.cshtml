<li class="timeline-inverted" style="margin-bottom: 40px;">
    <div class="row-fluid">
        <div class="col-md-12">
            <div class="tl-circ">
                <img data-bind="attr: { src: PicturePath }" alt="" class="img-circle img-cover" data-src="holder.js/120x120/auto">
            </div>
            <div class="timeline-panel" style="margin-top: 1%;">
                <div class="tl-heading">
                    <h4 class="font-text" data-bind="text: Title"></h4>
                    <br />
                    <p class="font-text" style="display: inline; padding-right: 5px;">
                        <i class="glyphicon glyphicon-calendar" title="Fecha de realización"></i><small class="text-muted" data-bind="text: EventDate">&nbsp</small>
                    </p>
                    <p class="font-text" style="display: inline">
                        <i class="glyphicon glyphicon-time" title="Hora de realización"></i><small class="text-muted" data-bind="text: EventTime">&nbsp</small>
                    </p>
                </div>
                <br />
                <div class="tl-body">
                    <p class="font-text" data-bind="text: Description"></p>
                </div>
                <div class="col-md-12" style="margin-top: 15px; margin-bottom: -18px;">
                    <a href="#" data-bind="click: EventDetail" style="float: left; padding-top: 5px;" title="Ir al detalle"><i class="icon-default glyphicon glyphicon-search"></i></a>
                    <div style="padding: 0 5px 5px; float: left;">
                        <a href="#" title="Compartir en Twitter" data-bind="TwitterButton: { title: Title, id: Id }" target="_blank">
                            <img class="shared-social" src="/Content/themes/images/twitter.png" /></a>
                        <a href="#" data-bind="click: fbShare">
                            <img class="shared-social" src="/Content/themes/images/facebook.jpeg" /></a>
                        <div id="fb-root"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</li>
