@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using PubliEventos.Contract.Class
@System.Web.Optimization.Scripts.Render("/Scripts/jquery.blockUI.js")
@System.Web.Optimization.Styles.Render("~/Content/bootstrap/css/bootstrap.min.css")

<div class="row-fluid" style="margin-top: 3%">
    <div class="col-md-12">
        <div class="row-fluid">
            <div class="col-xs-12">
                <div class="col-md-12">
                    <img class="image-cloud" alt="nube" src="/Content/themes/images/cloud_1.png" />
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <ul class="timeline">
                @foreach (var eventGroup in (List<List<Event>>)ViewBag.events)
                {
                    <li>
                        <div class="tldate">@eventGroup.First().EventDate.ToShortDateString()</div>
                    </li>
                    var indice = true;

                    foreach (var eventSingle in eventGroup)
                    {
                        if (indice)
                        {
                    @Html.Partial("Partial/_LeftBubble", (Event)eventSingle)
                            indice = false;
                        }
                        else
                        {
                    @Html.Partial("Partial/_RightBubble", (Event)eventSingle)
                            indice = true;
                        }
                    }
                }
            </ul>
        </div>
        <nav class="navbar-fixed-bottom" style="margin-right: 20px">
            <form class="navbar-form navbar-right" role="search">
                <div class="form-group">
                    <input type="text" class="form-control search" id="s" style="width: 300px" placeholder="Buscar...">
                </div>
            </form>
        </nav>
    </div>
</div>
