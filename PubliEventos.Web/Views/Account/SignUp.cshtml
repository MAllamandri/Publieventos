@model PubliEventos.Web.Models.AccountModels.SignUpModel

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-xs-12">
            @using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="row-fluid">
                    <div class="input-group input-group-lg">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="input-group input-group-lg">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Usuario" })
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="input-group input-group-lg">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña" })
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="input-group input-group-lg">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.RepeatPassword, new { @class = "form-control", @placeholder = "Repetir Contraseña" })
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <div class="form-actions clearfix">
                            <div class="pull-right">
                                <a href="#" class="flip-link to-recover grey">Recuperar contraseña</a>
                            </div>
                            <input type="submit" class="btn btn-block btn-primary btn-default" value="Login">
                        </div>
                    </div>
                    <div class="col-md-4"></div>
                </div>
            }
        </div>
    </div>
</div>
