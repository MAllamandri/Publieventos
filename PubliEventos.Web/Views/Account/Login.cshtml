@model PubliEventos.Web.Models.AccountModels.UserModel

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>PubliEventos</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/bootstrap/css/bootstrap.min.css")
    @Styles.Render("/Content/Site.css")
    <link class="cssdeck" rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.1/css/bootstrap-responsive.min.css" class="cssdeck">
</head>
<body style="">
    <div class="container-fluid">
        <div class="col-xs-12">
            <div class="row-fluid">
                <div class="col-md-12">
                    <div style="margin-top: 30px">
                        <a class="title" title="PubliEventos" href="../">publieventos</a>
                    </div>
                    <div class="col-md-4"></div>
                    <div class="col-md-4 login-form" id="loginModal">
                        <div class="">
                            <div class="well">
                                <ul class="nav nav-tabs">
                                    <li class="active font-text"><a href="#login" data-toggle="tab">Ingresar</a></li>
                                    <li><a href="#create" class="font-text" data-toggle="tab">Registrarse</a></li>
                                </ul>
                                <div id="myTabContent" class="tab-content">
                                    <div class="tab-pane active " id="login">
                                        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("IsLogin", true)

                                            <div class="row-fluid">
                                                <div class="col-md-12">
                                                    <div>
                                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Usuario", @style = "height: 34px" })
                                                        @Html.ValidationMessage("UserName")
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="col-md-12">
                                                    <div>
                                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña", @style = "height: 34px" })
                                                        @Html.ValidationMessage("Password")
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="col-md-12">
                                                    <div>
                                                        @Html.EditorFor(m => m.RememberMe, new { @class = "form-control", @placeholder = "Contraseña" })
                                                        <span class="font-text">Recordarme</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div style="margin-top: 10px">
                                                <div class="row-fluid">
                                                    <div class="col-md-12">
                                                        <button class="btn btn-success font-text">Ingresar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <div class="tab-pane fade" id="create">
                                        @using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()

                                            <div class="row-fluid">
                                                <div class="col-md-12">
                                                    <div>
                                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @style = "height: 34px" })
                                                        @Html.ValidationMessage("Email")
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="col-md-12">
                                                    <div>
                                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Usuario", @style = "height: 34px" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="col-md-12">
                                                    <div>
                                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña", @style = "height: 34px" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="col-md-12">
                                                    <div>
                                                        @Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control", @placeholder = "Repetir Contraseña", @style = "height: 34px" })
                                                        @Html.ValidationMessage("RepeatPassword")
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="col-md-12">
                                                    <div>
                                                        <button class="btn btn-primary font-text">Registrarse</button>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4"></div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-ui.custom.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
</body>
</html>
