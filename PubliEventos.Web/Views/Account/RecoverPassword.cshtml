@{
    ViewBag.Title = "Recuperar Contraseña";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Publieventos - Recuperación de Contraseña</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @System.Web.Optimization.Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
    @System.Web.Optimization.Scripts.Render("/Scripts/jquery.blockUI.js")
    @System.Web.Optimization.Scripts.Render("/Scripts/bootbox.min.js")
    @System.Web.Optimization.Scripts.Render("~/ViewScripts/Account/RecoverPassword.js")
    @System.Web.Optimization.Scripts.Render("~/Scripts/bootstrap.min.js")

    @System.Web.Optimization.Scripts.Render("/ViewScripts/Shared/Shared.js")

    @Styles.Render("~/Content/bootstrap/css/bootstrap.min.css")
    @Styles.Render("/Content/Site.css")

</head>
<body>
    <div class="container-fluid">
        <div class="col-md-12">
            <div class="row-fluid">
                <div class="col-md-12">
                    <div style="margin-top: 30px">
                        <a class="title" title="PubliEventos" href="/Home/Index">publieventos</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid  Absolute-Center" id="verificationCodeForm">
        <div class="row-fluid">
            <div class="col-md-12">
                @Html.Label("Código de Verificación", new { @class = "label-lobster" })
                @Html.TextBox("Code", null, new { @class = "form-control", @style = "width: 265px; display: inline; margin-top: 12px;" })
                <input type="submit" id="validate" style="display: inline" class="btn-confirm pull-right" value="Continuar" />
                @Html.ValidationMessage("Code")
            </div>
            <div class="col-md-12">
                @Html.Hidden("UserId", (int)ViewBag.userId)
            </div>
        </div>
    </div>
    <div class="row-fluid  Absolute-Center" style="display: none" id="recoverForm">
        <div class="row-fluid margin-bottom-normal">
            <div class="col-md-12">
                <div class="col-md-12">
                    @Html.Label("Nueva Contraseña", new { @class = "label-lobster" })
                    @Html.Password("NewPassword", null, new { @class = "form-control" })
                    @Html.ValidationMessage("NewPassword")
                </div>
            </div>
        </div>
        <div class="row-fluid margin-bottom-normal">
            <div class="col-md-12">
                <div class="col-md-12">
                    @Html.Label("Repetir Contraseña", new { @class = "label-lobster" })
                    @Html.Password("RepeatPassword", null, new { @class = "form-control" })
                    @Html.ValidationMessage("RepeatPassword")
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="col-md-12">
                <div class="col-md-12">
                    <input type="submit" id="savePassword" class="btn-confirm pull-right" value="Guardar" />
                </div>
            </div>
        </div>
    </div>
</body>
</html>
