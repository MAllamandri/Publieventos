@model PubliEventos.Contract.Services.Report.SearchReportedContentsResponse

@{
    ViewBag.Title = "Administrar Reportes";
    Layout = "~/Views/Shared/_LayoutPublieventos.cshtml";
}

@System.Web.Optimization.Scripts.Render("/Scripts/moment.js")
@System.Web.Optimization.Scripts.Render("/ViewScripts/Admin/ReportContents.js")
@System.Web.Optimization.Scripts.Render("/Scripts/bootbox.min.js")


<script type="text/javascript">
    var events = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Events))
    var comments = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Comments))
    var pictures =  @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Pictures))
    var movies =  @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Movies))
</script>

<div class="row">
    <h2 class="title-section">CONTENIDOS REPORTADOS</h2>
    <div class="col-md-12">
        <div style="margin-bottom: 25px">
            <div class="row">
                <div class="col-md-12" style="margin-top: 5px">
                    <div class="col-md-12">
                        <ul id="myTabs" class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="active"><a id="tabEvents" class="label-description" href="#regionEvents" aria-controls="regionEvents" role="tab" data-toggle="tab">EVENTOS</a></li>
                            <li role="presentation"><a href="#regionComments" class="label-description" aria-controls="regionComments" role="tab" data-toggle="tab">COMENTARIOS</a></li>
                            <li role="presentation"><a href="#regionPictures" class="label-description" aria-controls="regionPictures" role="tab" data-toggle="tab">FOTOS</a></li>
                            <li role="presentation"><a href="#regionMovies" class="label-description" aria-controls="regionMovies" role="tab" data-toggle="tab">VIDEOS</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="tab-content">
                <div id="regionEvents" role="tabpanel" class="tab-pane fade active in">
                    <div class="col-md-12">
                        @Html.Partial("Partial/_ReportedEventDetail")
                    </div>
                </div>
                <div id="regionComments" role="tabpanel" class="tab-pane fade">
                    <div class="col-md-12">
                        @Html.Partial("Partial/_ReportedCommentDetail")
                    </div>
                </div>
                <div id="regionPictures" role="tabpanel" class="tab-pane fade">
                    <div class="col-md-12">
                        @Html.Partial("Partial/_ReportedPicture")
                    </div>
                </div>
                <div id="regionMovies" role="tabpanel" class="tab-pane fade">
                    <div class="col-md-12">
                        @Html.Partial("Partial/_ReportedMovie")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
