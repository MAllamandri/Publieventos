<div data-bind="foreach: Comments, visible: Comments().length > 0">
    <div class="col-xs-12" style="margin-bottom: 20px">
        <div class="col-xs-12" style="text-align: center">
            <a href="#" data-bind="click: UserProfile">
                <img data-bind="attr: { src: ImageProfile, title: FullName }" alt="Perfil del usuario" class="profile-comment image-border img-circle right" data-src="holder.js/60x60">
            </a>
        </div>
        <div class="col-xs-12" style="height: 25px">
            <div class="profile-after" style="height: 25px"></div>
        </div>
        <div class="col-xs-12 bubble-comment">
            <div class="col-xs-12" style="margin-top: 2px; margin-bottom: 2px;">
                <small data-bind="text: ElapsedTime" style="float: left; font-size: 10px;"></small>
            </div>
            <div class="col-xs-12 comment-detail" data-bind="text: Detail">
            </div>
            <div class="col-xs-12 actions-comment">
                <a data-bind="visible: !IsReported(), click: ShowReportModal"  data-toggle="tooltip" data-placement="top" title="Reportar" href="#"><i class="icon-default icon-ban-circle"></i></a>

                <a data-bind="visible: EnabledActions, click: ShowCommentModal"  data-toggle="tooltip" data-placement="top" title="Editar" href="#"><i class="icon-default icon-pencil"></i></a>
                <a data-bind="visible: EnabledActions, click: DeleteComment" style="padding-left: 7px"  data-toggle="tooltip" data-placement="top" stitle="Eliminar" href="#"><i class="icon-default icon-remove"></i></a>

                <div data-bind="visible: IsReported()" style="display: none; display: inline; float: right; padding-right: 20px; color: #f00">
                    <strong style="font-size: 11px !important">Has Reportado este Comentario</strong>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-xs-12" style="text-align: center" data-bind="visible: Comments().length == 0 && ShowNotFoundComments() == true">
    <p style="font-size: 20px; margin-top: 30px;" class="not-found-message">No Hay Comentarios Disponibles</p>
</div>
