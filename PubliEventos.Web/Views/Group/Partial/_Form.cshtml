@model PubliEventos.Contract.Services.Group.GroupBaseRequest

<div class="row margin-bottom-normal">
    <div class="col-md-12">
        <div class="col-md-6">
            @Html.Label("NOMBRE DEL GRUPO", new { @class = "label-description" })
            @Html.TextBoxFor(m => m.GroupName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.GroupName)
        </div>
    </div>
</div>
<div class="row margin-bottom-normal">
    <div class="col-md-12">
        <div class="col-md-12">
            @Html.Label("MENSAJE AL GRUPO", new { @class = "label-description" })
            @Html.TextBoxFor(m => m.Message, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Message)
        </div>
    </div>
</div>
<div class="row margin-bottom-normal">
    <div class="col-md-12">
        <div class="col-md-12">
            <label class="label-description">AGREGAR MIEMBROS</label>
            @Html.TextBoxFor(m => m.UserIds, new { @class = "font-text select2-users" })
            @Html.ValidationMessageFor(m => m.UserIds)
        </div>
    </div>
</div>
