@model PubliEventos.Contract.Class.Group

@{
    ViewBag.Title = "Detalle del Grupo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
    <div class="col-md-10 offset1">
        <div style="margin-bottom: 25px">
            <div class="row-fluid">
                <div class="col-md-12">
                    <h2 class="subtitle">@Model.Name</h2>
                </div>
                <div class="row-fluid">
                    <div class="col-md-12">
                        <h2 class="message-group">@Model.Message</h2>
                    </div>
                </div>
                <div class="row-fluid" style="margin-top: 50px">
                    <div class="col-md-12">
                        <strong>Miembros</strong>
                        <div class="col-md-12">
                            @foreach (var user in Model.Users)
                            {
                                <div class="row-fluid">
                                    <div class="col-md-12 tl-heading">
                                        <p style="display: inline">@user.FirstName @user.LastName </p>
                                        <h4 style="display: inline" class="font-text">(@user.UserName)</h4>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="col-md-12">
                        <div class="col-md-12 region-buttons">
                            <a type="button" href="/Group/MyGroups">
                                <input type="button" value="Volver" class="btn-cancel pull-left" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
