@{
    ViewBag.Title = "Nuevo Grupo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@System.Web.Optimization.Scripts.Render("/Scripts/bootbox.min.js")
@System.Web.Optimization.Scripts.Render("/Scripts/jquery.blockUI.js")
@System.Web.Optimization.Scripts.Render("/ViewScripts/Group/Create.js")
@System.Web.Optimization.Scripts.Render("/Scripts/select2.js")
@System.Web.Optimization.Scripts.Render("/Scripts/select2_locale_es.js")

@Styles.Render("~/Content/Select2/select2-bootstrap.css")
@Styles.Render("~/Content/Select2/select2.css")

<div class="row-fluid">
    <div class="col-md-10 offset1">
        <div style="margin-bottom: 25px">
            <div class="row-fluid">
                <div class="col-md-12">
                    <h2 class="subtitle">Crear Grupo</h2>
                </div>
            </div>
            <div class="row-fluid">
                <form id="CreateForm" method="post">

                    @Html.AntiForgeryToken()

                    <div class="row-fluid margin-bottom-normal">
                        <div class="col-md-12">
                            <div class="col-md-6">
                                @Html.Label("Nombre del Grupo", new { @class = "label-lobster" })
                                @Html.TextBox("GroupName", null, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid margin-bottom-normal">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                @Html.Label("Mensaje al Grupo", new { @class = "label-lobster" })
                                @Html.TextBox("Message", null, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid margin-bottom-normal">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <label class="label-lobster">Agregar Usuarios</label>
                                <input type="hidden" class="font-text select2-remote">
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="col-md-12">
                            <div class="col-md-12 region-buttons">
                                <input type="submit" id="Save" class="btn-confirm pull-right" value="Guardar" />
                                <a type="button" href="/Group/MyGroups">
                                    <input type="button" value="Cancelar" class="btn-cancel pull-left" /></a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
